<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="pref_country_code"
        android:defaultValue="US"
        android:title="Country code" />
    <CheckBoxPreference
        android:key="pref_show_on_lock_screen"
        android:defaultValue="true"
        android:title="Show notification controls on lock screen" />
    <CheckBoxPreference
        android:key="pref_enable_beacon_scanning"
        android:defaultValue="false"
        android:title="Enable scanning for Spotify beacons" />
    <ListPreference
        android:key="pref_beacon_type"
        android:entries="@array/pref_beaconTypes_entries"
        android:entryValues="@array/pref_beaconTypes_values"
        android:defaultValue="simulated"
        android:title="Beacon type" />
</PreferenceScreen>